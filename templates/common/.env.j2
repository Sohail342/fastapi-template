# Environment Configuration
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME={{ project_name }}
{% if description -%}
PROJECT_DESCRIPTION={{ description }}
{% endif -%}

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

{% if orm == "sqlalchemy" -%}
# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost/{{ project_slug }}
# For SQLite (development)
# DATABASE_URL=sqlite+aiosqlite:///./{{ project_slug }}.db

# For Alembic (synchronous)
SYNC_DATABASE_URL=postgresql://user:password@localhost/{{ project_slug }}
{% elif orm == "beanie" -%}
# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME={{ project_slug }}
{% endif -%}

# Email Configuration (for user registration)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME={{ project_name }}

{% if project_type == "fullstack" -%}
# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
{% endif -%}

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]