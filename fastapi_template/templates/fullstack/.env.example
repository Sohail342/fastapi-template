# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# FastAPI-Users Backend Selection
# Choose between 'sqlalchemy' (PostgreSQL) or 'beanie' (MongoDB)
FASTAPI_USERS_BACKEND=sqlalchemy

# Server Configuration
HOST=0.0.0.0
PORT=8000

# API Configuration
API_V1_STR=/api/v1

# Security Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=480
ALGORITHM=HS256

# Database Configuration
# For SQLAlchemy/PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_fullstack

# For Beanie/MongoDB (only needed if FASTAPI_USERS_BACKEND=beanie)
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=fastapi_fullstack

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001

# Host Configuration
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration (for FastAPI-Users password reset)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=FastAPI Fullstack

# First Superuser (FastAPI-Users)
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=admin

# User Registration
USERS_OPEN_REGISTRATION=true